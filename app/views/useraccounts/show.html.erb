<div style="text-align: center; max-width: 800px; margin: 0 auto;">

  <h1><%= @user.name %>'s Profile</h1>

  <p>Email: <%= @user.email %></p>

  <h2 style="margin-top: 40px;">Current Services Offered</h2>
  <% @services.each do |service| %>
    <p><%= service.title %></p>
  <% end %>

  <h2 style="margin-top: 50px;">Vendor Rating</h2>
  <p style="font-size: 20px;">
    <%= @vendor_average_rating.zero? ?
        "No ratings yet" :
        "#{@vendor_average_rating.round(2)} / 5" %>
  </p>

  <h2 style="margin-top: 40px;">Client Rating</h2>
  <p style="font-size: 20px;">
    <%= @client_average_rating.zero? ?
        "No ratings yet" :
        "#{@client_average_rating.round(2)} / 5" %>
  </p>

<div style="margin-top: 50px;">
  <%= link_to 'Back to Services Page',
      services_path,
      style: '
        padding: 10px 25px;
        font-size: 16px;
        background-color: #cfe8f3;
        color: #000;
        text-decoration: none;
        border-radius: 6px;
        display: inline-block;
      ' %>
</div>

</div>

