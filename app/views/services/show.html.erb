
<h2><%= @service.title %></h2>

<ul class="list-group">
  <li class="list-group-item"><strong>Vendor Name:</strong> <%= @service.vendor_name %></li>
  <li class="list-group-item"><strong>Description:</strong> <%= @service.description %></li>
  <li class="list-group-item"><strong>Price:</strong> 
    <% if @service.price.present? %>
      $<%= number_with_precision(@service.price, precision: 2) %>
    <% else %>
      Not specified
    <% end %>
  </li>
</ul>
<br/>

<%= link_to "Request this Service", 
            new_service_request_path(service_id: @service.id, vendor_id: @service.vendor_id), 
            class: 'btn btn-primary' %>

<h3>Reviews</h3>
<ul class="list-group">
  <% @reviews.each do |review| %>
    <li class="list-group-item">
      <strong>Reviewer:</strong> <%= review.client_name %> |
      <strong>Rating:</strong> <%= review.rating %> |
      <strong>Comment:</strong> <%= review.comment %>
    </li>
  <% end %>
</ul>
<br/>

<%= link_to 'All Services', services_path, class: 'btn btn-secondary' %>
